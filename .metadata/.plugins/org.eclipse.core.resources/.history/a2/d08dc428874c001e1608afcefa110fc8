package sp1;

import java.util.ArrayList;
import java.util.Arrays;

//2차원 배열에 대한 응용편
/*
 A조 김경민 배유미 김승균
 B조 이철의 장진호 홍사라
 C조 박병준 전정호 이경선
 D조 최현제 사강인 염무원
 
 [결과]
 [[A조,김경민 , 배유미, 김승균 ]],[B조, 이철의]
 */
public class array_link3 {

	public static void main(String[] args) {
		//코드 및 결과 출력

		ArrayList<ArrayList<String>> k = new ArrayList<ArrayList<String>>();
		//2차원 배열에 그룹으로 값을 삽입하기 위한 1차원 빈배열 생성
		System.out.println(Arrays.deepToString(k.toArray()));
		ArrayList<String> a = new ArrayList<String>();
		a.add("A조");
		a.add("김경민");
		a.add("배유미");
		a.add("김승균");
		k.add(a);  //2차원 배열에 해당 값을 삽입
		
		//새로운 1차원 배열을 생성 후 데이터 입력 
		ArrayList<String> b = new ArrayList<String>();
		a.add("B조");
		a.add("이철의");
		a.add("장진호");
		a.add("홍사라");
		k.add(a);  //2차원 배열에 해당 값을 삽입
	}

}
